{% extends 'base.html.twig' %}

{% block body %}
    <div class="authentification">
        <div class="container-fluid">
            <div class="row head">
                <div class="col-md-12"></div>
                <img class="logo" src="{{ asset('img/logo.png') }}" />
            </div>
            <div class="auth-form-container">
               <h1>Se connecter</h1>

                {% if error %}
                    <p class="text-danger">Erreur lors de l'authentification</p>
                {% endif %}

                <form action="{{ path('login_check') }}" method="post">
                    <div class="form-group">
                        <div class="input-group {% if error %} has-error {% endif %}">
                            <div class="input-group-addon"><span class="glyphicons glyphicons-user"></span></div>
                            <input type="text" id="username" class="form-control" name="_username" value="" placeholder="Nom d'utilisateur" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group {% if error %} has-error {% endif %}">
                            <div class="input-group-addon"><span class="glyphicons glyphicons-lock"></span></div>
                            <input type="password" id="password" class="form-control" name="_password" placeholder="Mot de passe"/>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
                </form>
            </div>
        </div>  
    </div>
{% endblock %}