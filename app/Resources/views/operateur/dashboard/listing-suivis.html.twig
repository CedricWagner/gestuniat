<div class="listing-container">
	{% if lstAlertes[deadline] %}
		{% for alerte in lstAlertes[deadline] %}
	        <div class="listing-item clearfix alerte">
	        	<div class="listing-item-side left-side">
	        		<input type="checkbox" value="" />
	        	</div>
	        	<div class="listing-item-content">
	        		<h4>{{ alerte.label }} <small>{{ alerte.dateEcheance.format('d/m/Y') }}</small></h4>
	        		<p>{{ alerte.texte }}</p>
	        	</div>
	        	<div class="listing-item-side right-side">
	        		<p class="contextual-icon"><span class="glyphicon glyphicon-option-horizontal"></span></p>
	        	</div>
	        </div>
	    {% endfor %}
	{% endif %}
</div>