<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Bienvenue sur GESTUNIAT{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" media="screen" type="text/css" title="Design" href="{{ asset('bootstrap/css/bootstrap.css') }}">
            <link rel="stylesheet" media="screen" type="text/css" title="Design" href="{{ asset('css/styles.css') }}">
            <link href='https://fonts.googleapis.com/css?family=Roboto:400,700,300,400italic' rel='stylesheet' type='text/css'>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />
    </head>
    <body>
        {% block body %}
            {% block left_sidebar_container %}
                <div id="left-sidebar">
                    {% block left_sidebar %}
                        <div class="head-container">
                            <img src="{{ asset('img/logo.png') }}" alt="Logo UNIAT" id="logo" />
                            <div>
                                <span class="small">Bonjour</span><br />
                                <b>{{ app.user.prenom }} {{ app.user.nom }}</b>
                            </div>
                        </div>
                        <div class="menu-container">
                            <div class="spacer"></div>
                            <ul class="menu">
                                <li><a href="{{ path('dashboard') }}">Accueil</a></li>
                                <li><a href="">Contacts</a></li>
                                <li><a href="">Sections</a></li>
                                <li><a href="">Dossiers</a></li>
                                <li><a href="">Organismes</a></li>
                                <li><a href="">Filtres perso.</a></li>
                                <li><a href="">Rentier</a></li>
                            </ul>
                            <div class="spacer"></div>
                            <ul class="menu">
                                <li><a href="">Support</a></li>
                            </ul>
                        </div>
                    {% endblock %}    
                </div>
            {% endblock %}
            {% block main_content_container %}
                <div id="main-content">
                    {% block main_content %}
                        {% block header_container %}
                            <header class="clearfix">
                                {% block header %}
                                    <div class="col-md-6">
                                        <input type="text" id="global-search-zone" placeholder="Rechercher une personne, une section ou numéro" />
                                    </div>
                                    <div class="col-md-6 clearfix">
                                        <a class="header-button" href="{{ path('logout') }}">
                                            Quitter
                                        </a>
                                        <a class="header-button" href="{# path('reglages') #}">
                                            Réglages
                                        </a>
                                        <a class="header-button" href="{# path('alertes') #}">
                                            Alertes
                                        </a>
                                        <a class="header-button" href="" target="_blank">
                                            Fenêtre
                                        </a>
                                    </div>
                                {% endblock %}
                            </header>
                        {% endblock %}
                        <div class="container-border">
                            <div class="container fullwidth">
                                {% block content %}
                                    <h1>Page inexistante...</h1>
                                {% endblock %}
                            </div>
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery-2.2.1.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bootstrap/js/bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>
