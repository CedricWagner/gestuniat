{% extends 'base.html.twig' %}

{% block title %}Gestuniat - Types d'organisme{% endblock %}

{% block additionnal_classes %}internal has-left-column{% endblock %}

{% block left_column %}

	{% include 'admin/reglages.inc.html.twig'  %}

{% endblock %}

{% block content %}
	<h2>Types d'organisme</h2>
	<ol class="breadcrumb">
	  <li><a href="{{ path('dashboard') }}">Accueil</a></li>
	  <li><a href="{{ path('reglages') }}">RÃ©glages</a></li>
	  <li class="active">Types d'organisme</li>
	</ol>
	<table class="table table-striped table-hover selectable">
		<thead>
			<tr>
				<th></th>
				<th>Nom</th>
			</tr>
		</thead>
		<tbody>
			{% for typeOrganisme in typeOrganismes %}
				<tr>
					<td style="position:relative;">
						{% include 'operateur/contacts/contextual-default.inc.html.twig' with {'entity':'typeOrganisme','object':typeOrganisme,'deletePath':path('delete_typeOrganisme',{'idTypeOrganisme':typeOrganisme.id})} %}
						{% include 'modals/default.html.twig' with {'form':typeOrganismeForms[typeOrganisme.id],'entity':'typeOrganisme','object':typeOrganisme,'title':'Edition du typeOrganisme'} %}
					</td>
					<td>{{ typeOrganisme.label }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<button class="btn btn-primary" data-toggle="modal" data-target="#add-typeOrganisme-0">Saisir un nouveau type d'organisme</button>
	<br />
	{% include 'modals/default.html.twig' with {'form':newTypeOrganismeForm,'entity':'typeOrganisme','object':false,'title':'Saisir un nouveau type d\'organisme'} %}
{% endblock %}