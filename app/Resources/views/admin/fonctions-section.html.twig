{% extends 'base.html.twig' %}

{% block title %}Gestuniat - Fonctions de section{% endblock %}

{% block additionnal_classes %}internal has-left-column{% endblock %}

{% block left_column %}

	{% include 'admin/reglages.inc.html.twig'  %}

{% endblock %}

{% block content %}
	<h2>Fonctions de section</h2>
	<ol class="breadcrumb">
	  <li><a href="{{ path('dashboard') }}">Accueil</a></li>
	  <li><a href="{{ path('reglages') }}">RÃ©glages</a></li>
	  <li class="active">Fonctions de section</li>
	</ol>
	<table class="table table-striped table-hover selectable">
		<thead>
			<tr>
				<th></th>
				<th>Nom</th>
			</tr>
		</thead>
		<tbody>
			{% for fonctionSection in fonctionSections %}
				<tr>
					<td style="position:relative;">
						{% include 'operateur/contacts/contextual-default.inc.html.twig' with {'entity':'fonctionSection','object':fonctionSection,'deletePath':path('delete_fonctionSection',{'idFonctionSection':fonctionSection.id})} %}
						{% include 'modals/default.html.twig' with {'form':fonctionSectionForms[fonctionSection.id],'entity':'fonctionSection','object':fonctionSection,'title':'Edition du fonctionSection'} %}
					</td>
					<td>{{ fonctionSection.label }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<button class="btn btn-primary" data-toggle="modal" data-target="#add-fonctionSection-0">Saisir une nouvelle fonction de section</button>
	<br />
	{% include 'modals/default.html.twig' with {'form':newFonctionSectionForm,'entity':'fonctionSection','object':false,'title':'Saisir une nouvelle fonction de section'} %}
{% endblock %}